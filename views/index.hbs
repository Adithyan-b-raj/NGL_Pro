<div class="container">
    <div class="header">
        <h1>💬 Ask Me Anything</h1>
        <p>Send me anonymous messages and questions. I'll reply here!</p>
    </div>
    
    <div class="content">
        {{#if (lookup (query) 'success')}}
            <div class="alert alert-success">
                ✅ Your message has been sent successfully!
            </div>
        {{/if}}
        
        {{#if (lookup (query) 'error')}}
            <div class="alert alert-error">
                {{#if (eq (lookup (query) 'error') 'empty')}}
                    ❌ Please enter a message before sending.
                {{else}}
                    ❌ Failed to send message. Please try again.
                {{/if}}
            </div>
        {{/if}}
        
        <div class="message-form">
            <form method="POST" action="/send-message">
                <div class="form-group">
                    <label for="message">Your Anonymous Message:</label>
                    <textarea name="message" id="message" placeholder="Ask me anything... Your identity will remain completely anonymous!" required></textarea>
                </div>
                <button type="submit" class="btn">Send Message 📤</button>
            </form>
        </div>
        
        {{#if messages}}
            <div class="messages">
                <h3>Our Conversation:</h3>
                {{#each messages}}
                    <div class="message {{#if is_admin_reply}}admin{{else}}user{{/if}}">
                        {{#if is_admin_reply}}
                            <strong>💭 Reply:</strong>
                        {{else}}
                            <strong>📝 You:</strong>
                        {{/if}}
                        <p>{{message}}</p>
                        <div class="message-time">{{formatDate created_at}}</div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div style="text-align: center; padding: 40px; color: #666;">
                <p>👋 Start the conversation by sending your first anonymous message!</p>
            </div>
        {{/if}}
    </div>
</div>